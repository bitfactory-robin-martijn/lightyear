{
    "name": "bitfactory/lightyear",
    "description": "Convert distances with ease",
    "keywords": [
        "bitfactory",
        "lightyear"
    ],
    "homepage": "https://github.com/bitfactory/lightyear",
    "license": "MIT",
    "authors": [
        {
            "name": "Robin Martijn",
            "email": "robin.martijn@bitfactory.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Bitfactory\\Lightyear\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitfactory\\Lightyear\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
